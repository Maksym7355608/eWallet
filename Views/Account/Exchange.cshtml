@model eWallet.Models.ClientViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Content/css/general.css">
    <link rel="stylesheet" href="~/Content/css/account_general.css">
    <link rel="stylesheet" href="~/Content/css/forms.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exchange</title>
</head>
<body>
    <div class="header">
        <a href="/" class="header-text">Home</a>
        <a href="/Home/About" class="header-text">About Us</a>
        <a href="/Home/News" class="header-text">News</a>
        <a href="/Login/SignIn" class="header-text" style="left:1800px">@Model.Name <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M8 8C10.21 8 12 6.21 12 4C12 1.79 10.21 0 8 0C5.79 0 4 1.79 4 4C4 6.21 5.79 8 8 8ZM8 10C5.33 10 0 11.34 0 14V16H16V14C16 11.34 10.67 10 8 10Z" fill="#659DAD" /> </svg></a>
    </div>


    <figure class="figure"><img src="~/Content/img/exchange.svg"><br><p>Exchange</p></figure>

    <section class="main-container">
        <div class="menu">
            <ul>
                <li>
                    <a href="/Account/Accounts">
                        <p>Account</p><svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 1.9C9.16 1.9 10.1 2.84 10.1 4C10.1 5.16 9.16 6.1 8 6.1C6.84 6.1 5.9 5.16 5.9 4C5.9 2.84 6.84 1.9 8 1.9ZM8 10.9C10.97 10.9 14.1 12.36 14.1 13V14.1H1.9V13C1.9 12.36 5.03 10.9 8 10.9ZM8 0C5.79 0 4 1.79 4 4C4 6.21 5.79 8 8 8C10.21 8 12 6.21 12 4C12 1.79 10.21 0 8 0ZM8 9C5.33 9 0 10.34 0 13V16H16V13C16 10.34 10.67 9 8 9Z" fill="black" />
                        </svg>
                    </a>
                </li>
                <li>
                    <a href="/Account/Deposit">
                        <p>Deposit</p><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M11 5H9V9H5V11H9V15H11V11H15V9H11V5ZM10 0C4.48 0 0 4.48 0 10C0 15.52 4.48 20 10 20C15.52 20 20 15.52 20 10C20 4.48 15.52 0 10 0ZM10 18C5.59 18 2 14.41 2 10C2 5.59 5.59 2 10 2C14.41 2 18 5.59 18 10C18 14.41 14.41 18 10 18Z" fill="black" />
                        </svg>
                    </a>
                </li>
                <li>
                    <a href="/Account/Withdraw">
                        <p>Withdraw</p>
                        <svg width="14" height="18" viewBox="0 0 14 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 0L0 3.99H3V11H5V3.99H8L4 0ZM11 14.01V7H9V14.01H6L10 18L14 14.01H11Z" fill="black" />
                        </svg>
                    </a>
                </li>
                <li>
                    <a href="/Account/Exchange" style="background: rgba(250, 213, 100, 1);
                    border-radius: 15px;">
                        <p>Exchange</p>
                        <svg width="22" height="16" viewBox="0 0 22 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18 4L14 8H17C17 11.31 14.31 14 11 14C9.99 14 9.03 13.75 8.2 13.3L6.74 14.76C7.97 15.54 9.43 16 11 16C15.42 16 19 12.42 19 8H22L18 4ZM5 8C5 4.69 7.69 2 11 2C12.01 2 12.97 2.25 13.8 2.7L15.26 1.24C14.03 0.46 12.57 0 11 0C6.58 0 3 3.58 3 8H0L4 12L8 8H5Z" fill="black" />
                        </svg>
                    </a>
                </li>
            </ul>
        </div>

        <div class="form">
            <form class="method" action="/Account/Exchange" method="post">
                <label for="">First account</label>
                <select name="from">
                    <option value="">Choose account</option>
                    @foreach (var item in Model.Money)
                    {
                        <option value="@item.Id">@item.Name  @item.Value</option>
                    }
                </select><br>
                <label for="">Second account</label>
                <select name="to">
                    <option value="">Choose account</option>
                    @foreach (var item in Model.Money)
                    {
                        <option value="@item.Id">@item.Name  @item.Value</option>
                    }
                </select><br>
                <label for="">Sum</label>
                <input type="number" name="value" placeholder="Your sum">
                <div class="button" style="margin-top: -20%;"><input type="submit" value="Create payment"></div>
            </form>
            
        </div>
    </section>

    <footer>
        Maksym Chorny 2020
    </footer>
</body>
</html>
